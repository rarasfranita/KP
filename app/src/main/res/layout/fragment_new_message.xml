<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DM.NewMessageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tbMessage"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:elevation="10dp"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:title="New Messages"/>
    </com.google.android.material.appbar.AppBarLayout>

   <LinearLayout
       android:id="@+id/ll_editText"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintTop_toBottomOf="@+id/appBarLayout">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="To"
           android:textSize="18sp"
           android:textStyle="bold"
           android:fontFamily="@font/lato"
           android:layout_gravity="center"
           android:layout_marginLeft="10dp"
           android:textColor="#AFAFAF">
       </TextView>

       <EditText
           android:id="@+id/edSearchbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/search_bar_drawable"
           android:hint="Search"
           android:layout_margin="10dp"
           android:drawableStart="@drawable/ic_baseline_search_24"
           android:drawableLeft="@drawable/ic_baseline_search_24"
           app:layout_constraintTop_toBottomOf="@+id/appBarLayout">
       </EditText>

   </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessagesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_editText"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>