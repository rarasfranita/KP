<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerProfile"
    tools:context=".ui.profile.ProfileActivity">

<!--    scrollview still not working    -->


    <RelativeLayout
        android:id="@+id/LinLay1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="listenToolbar"
            android:src="@drawable/ic_arrow_back_black" />

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/back"
            android:fontFamily="@font/lato"
            android:text="Profile"
            android:textColor="#6B6B6B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icBurgerProfile"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:onClick="listenMenuBurger"
            android:src="@drawable/ic_ellipses" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"
        android:layout_below="@+id/LinLay1"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/view"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1">

            <RelativeLayout
                android:id="@+id/myprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_profile"
                        android:id="@+id/profilePicture"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:text="@string/profile_s_name"
                        android:id="@+id/nameprofile"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tvBiografi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:text="@string/bio"
                        android:textAlignment="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <RelativeLayout
                            android:id="@+id/tvPost"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalPost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="11"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/postingan"
                                android:layout_below="@+id/totalPost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Posts"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/tvFollowers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalFollowers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Followers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Followers"
                                android:layout_below="@+id/totalFollowers"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/tvFollowing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalFollowing"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Following"
                                android:layout_below="@+id/totalFollowing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Following"
                                android:gravity="center"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        android:layout_below="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:backgroundTint="@color/white"
                        android:elevation="2dp"
                        app:strokeWidth="0.0000001dp"
                        android:textAllCaps="false"/>

                    <LinearLayout
                        android:id="@+id/follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFollowProfile"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Follow"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_marginRight="10dp"
                            android:elevation="2dp"
                            app:strokeColor="@color/colorPrimaryDark"
                            app:strokeWidth="0.0000001dp"
                            android:textAllCaps="false"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDm"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textAllCaps="false"
                            android:text="Message"
                            android:textColor="@color/colorPrimaryDark"
                            android:backgroundTint="@color/white"
                            android:elevation="2dp"
                            app:strokeWidth="0.0000001dp"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myprofile"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_Pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_below="@+id/tab_Layout">
            </androidx.viewpager.widget.ViewPager>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
